@model IEnumerable<ORA.Models.WorkHistoryVM>

@{
    ViewBag.Title = "ReadresumeByWorkHistoryId";
    Layout = null;
}

<link href="~/Content/Resume.css" rel="stylesheet" />
<div class="row">
    <div class="col-lg-12 ">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                    <i class="glyphicon glyphicon-wrench"></i>
                    WORK HISTORY
                </h4>
            </div>
            <div class="panel-body">
                <div class="box box-info">
                    <div class="box-body">
                        <a class="btn btn-primary" href="CreateResumeWorkHistory">Create Work History</a>

                        <div class="bot-border" style="border-bottom-width: 15px; border-bottom-color: darkgrey;"></div>
                        @foreach (var item in Model)
                        {
                            <div>
                                <div class="col-sm-5 col-xs-6 tital">
                                    @Html.DisplayNameFor(model => model.OrganizationName)
                                </div>
                                <div class="col-sm-7">
                                    @Html.DisplayFor(modelItem => item.OrganizationName)
                                </div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>
                            </div>

                            <div>
                                <div class="col-sm-5 col-xs-6 tital">
                                    @Html.DisplayNameFor(model => model.WorkPlaceLocation)
                                </div>
                                <div class="col-sm-7">
                                    @Html.DisplayFor(modelItem => item.WorkPlaceLocation)
                                </div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>
                            </div>

                            <div>
                                <div class="col-sm-5 col-xs-6 tital">
                                    @Html.DisplayNameFor(model => model.WorkPlaceStartDate)
                                </div>
                                <div class="col-sm-7">
                                    @Html.DisplayFor(modelItem => item.WorkPlaceStartDate)
                                </div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>
                            </div>

                            <div>
                                <div class="col-sm-5 col-xs-6 tital">
                                    @Html.DisplayNameFor(model => model.WorkPlaceEndDate)
                                </div>
                                <div class="col-sm-7">
                                    @Html.DisplayFor(modelItem => item.WorkPlaceEndDate)
                                </div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>
                            </div>

                            <div>
                                <div class="col-sm-5 col-xs-6 tital">
                                    @Html.DisplayNameFor(model => model.JobDescription)
                                </div>
                                <div class="col-sm-7">
                                    @Html.DisplayFor(modelItem => item.JobDescription)
                                </div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>
                            </div>

                            <div class="bot-border"></div>

                            <div class="bot-border" style="border-bottom-width: 15px; border-bottom-color: darkgrey;"></div>

                            <a class="btn btn-primary" href="UpdateResumeWorkHistory">Update Work History</a>
                        }
                    </div>
                       
                        <div class="bot-border" style="border-bottom-width: 15px; border-bottom-color: darkgrey;"></div>
                        
                </div>
            </div>
        </div>
    </div>
</div>

